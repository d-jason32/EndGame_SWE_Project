                        <Button fx:id="registerButton1" layoutX="20.0" layoutY="280.0" mnemonicParsing="false" onAction="#uploadProfileButton" prefHeight="25.0" prefWidth="200.0" text="Upload Profile Picture">
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </Button>
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonAction" prefHeight="25.0" prefWidth="200.0" text="Back" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </children>
        </StackPane>
    </center>
</BorderPane>
