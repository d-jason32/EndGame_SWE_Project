    <center>
        <StackPane fx:id="loginBox" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="260.0" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="170.0">
                    <children>
                        <ImageView fitHeight="83.0" fitWidth="93.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@images/profile.jpg" />
                            </image>
