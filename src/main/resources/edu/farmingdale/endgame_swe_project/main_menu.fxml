<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="menuBorder" prefHeight="800.0" prefWidth="1280.0" styleClass="body-background" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.farmingdale.endgame_swe_project.MainMenuController">
    <bottom>
        <Label styleClass="footer-label" text="Made in NYC." BorderPane.alignment="CENTER" />
    </bottom>

    <center>
        <VBox alignment="CENTER" prefHeight="577.0" prefWidth="1280.0" spacing="15" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
         <Button fx:id="playButton" layoutX="450.0" layoutY="60.0" onAction="#playChess" prefHeight="25.0" prefWidth="400.0" text="Play Chess">
            <font>
               <Font size="20.0" />
            </font>
         </Button>
            <Button fx:id="button1" onAction="#goToDatabase" prefHeight="25.0" prefWidth="400.0" text="Generate ChatGPT Bracket">
                <font>
                    <Font size="20.0" />
                </font>
            </Button>
            <Button fx:id="button2" onAction="#goToProfile" prefHeight="25.0" prefWidth="400.0" text="Edit Profile">
                <font>
                    <Font size="20.0" />
                </font>
            </Button>
            <Button fx:id="logoutButton" layoutX="450.0" layoutY="236.0" onAction="#logoutButton" prefHeight="25.0" prefWidth="400.0" text="Logout">
                <font>
                    <Font size="20.0" />
                </font>
            </Button>
            <ToggleButton fx:id="themeButton" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#changeToDark" prefHeight="37.0" prefWidth="400.0" text="Dark Mode">
                <font>
                    <Font size="18.0" />
                </font>
            </ToggleButton>
        </VBox>
    </center>
    <top>
        <ImageView fitHeight="603.0" fitWidth="717.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
            <image>
                <Image url="@images/trans_image.png" />
            </image>
        </ImageView>
    </top>
</BorderPane>
